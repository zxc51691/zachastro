---

interface Props {
  title?: string;
  subtitle?: string;
  date?: string;
  location?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title = "CoreCon 2025",
  subtitle = "Where Core Engineers and Industry Leaders Connect",
  date = "May 15-17, 2025",
  location = "San Francisco, CA",
  ctaText = "Register Now",
  ctaLink = "/register",
  secondaryCtaText = "View Schedule",
  secondaryCtaLink = "/schedule"
} = Astro.props;
---

<section class="hero-section">
  <div class="hero-content">
    <div class="container">
      <h1>{title}</h1>
      <p class="hero-subtitle">{subtitle}</p>
      
      <div class="hero-details">
        <div class="hero-detail">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          <span>{date}</span>
        </div>
        
        <div class="hero-detail">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          <span>{location}</span>
        </div>
      </div>
      
      <div class="hero-actions">
        <a href={ctaLink} class="btn btn-primary btn-lg">{ctaText}</a>
        <a href={secondaryCtaLink} class="btn btn-outline btn-lg">{secondaryCtaText}</a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
  position: relative;
  background-image: url('/hero-bg.jpg');
  background-size: cover;
  background-position: center;
  color: white;
  height: 80vh;
  min-height: 600px;
  display: flex;
  align-items: center;
}

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.8));
  }

  .hero-content {
    position: relative;
    z-index: 2;
    width: 100%;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  h1 {
    font-size: 4rem;
    font-weight: 800;
    margin-bottom: 1rem;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 1.75rem;
    max-width: 700px;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .hero-details {
    display: flex;
    margin-bottom: 2.5rem;
    gap: 2rem;
  }

  .hero-detail {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.25rem;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
  }

  .btn-lg {
    padding: 0.75rem 2rem;
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .hero-section {
      height: auto;
      padding: 6rem 0;
    }
    
    h1 {
      font-size: 2.75rem;
    }
    
    .hero-subtitle {
      font-size: 1.25rem;
    }
    
    .hero-details {
      flex-direction: column;
      gap: 1rem;
    }
    
    .hero-actions {
      flex-direction: column;
    }
    
    .btn-lg {
      width: 100%;
      text-align: center;
    }
  }
</style>