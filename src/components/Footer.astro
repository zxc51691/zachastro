const footerLinks = [
  {
    title: 'Event',
    links: [
      { name: 'Schedule', href: '/schedule/' },
      { name: 'Speakers', href: '/speakers/' },
      { name: 'Tech Labs', href: '/tech-labs/' },
      { name: 'Register', href: '/register/' }
    ]
  },
  {
    title: 'Information',
    links: [
      { name: 'About', href: '/about/' },
      { name: 'Venue', href: '/about/#venue' },
      { name: 'FAQ', href: '/about/#faq' },
      { name: 'Contact', href: '/about/#contact' }
    ]
  },
  {
    title: 'Resources',
    links: [
      { name: 'Sponsor Guide', href: '/sponsors/guide/' },
      { name: 'Code of Conduct', href: '/code-of-conduct/' },
      { name: 'Press Kit', href: '/press-kit/' },
      { name: 'Past Events', href: '/past-events/' }
    ]
  }
];

const socialLinks = [
  { name: 'Twitter', href: 'https://twitter.com/corecon', icon: 'twitter' },
  { name: 'LinkedIn', href: 'https://linkedin.com/company/corecon', icon: 'linkedin' },
  { name: 'GitHub', href: 'https://github.com/corecon', icon: 'github' },
  { name: 'YouTube', href: 'https://youtube.com/corecon', icon: 'youtube' }
