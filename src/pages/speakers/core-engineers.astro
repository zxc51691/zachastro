---
// src/pages/speakers/core-engineers.astro
import PageLayout from '../../layouts/pagelayout.astro';
import SpeakerCard from '../../components/speakercard.astro';

// Speaker categories
const categories = [
  { id: 'all', name: 'All Speakers', link: '/speakers/' },
  { id: 'industry', name: 'Industry Leaders', link: '/speakers/industry-leaders/' },
